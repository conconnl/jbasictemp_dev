<?xml version="1.0" encoding="utf-8"?>
<extension version="3.3" type="template" client="site" method="upgrade">
	<name>frontend</name>
	<creationDate>2017</creationDate>
	<author>AUTHOR</author>
	<copyright>Copyright Â© 2017</copyright>
	<authorEmail>AUTHOR EMAIL</authorEmail>
	<authorUrl>AUTHOR WEBSITE</authorUrl>
	<version>1.0.0</version>
	<description><![CDATA[ 
		<h1>joomla-basictemplate</h1>
		<p>Basic Joomla template with Bootstrap, Font Awesome and JQuery.</p>
	]]></description>
	
	<files>
		<folder>css</folder>
		<folder>fonts</folder>
		<folder>helpers</folder>
		<folder>html</folder>
		<folder>images</folder>
		<folder>js</folder>
		<folder>language</folder>
		<filename>component.php</filename>
		<filename>error.php</filename>
		<filename>index.php</filename>
		<filename>offline.php</filename>
		<filename>template_preview.png</filename>
		<filename>template_thumbnail.png</filename>
		<filename>templateDetails.xml</filename>
	</files>
	
	<positions>
		<position>navbar</position>
		<position>leftsidebar</position>
		<position>rightsidebar</position>
		<position>footerblock1</position>
		<position>footerblock2</position>
		<position>footerblock3</position>
		<position>footer</position>
	</positions>

	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.tpl_frontend.ini</language>
		<language tag="en-GB">en-GB/en-GB.tpl_frontend.sys.ini</language>
        <language tag="nl-NL">nl-NL/nl-NL.tpl_frontend.ini</language>
        <language tag="nl-NL">nl-NL/nl-NL.tpl_frontend.sys.ini</language>
	</languages>
	
	<config>
		<fields name="params">
			<fieldset name="TEMPLATE_MODULES">
				<field
						name="navcolor"
						type="list"
						default=""
						label="Menubar Color"
				>
					<option value="">None</option>
					<option value="bg-color1">TPL_FRONTEND_OPTION_BGCOLOR_COLOR1</option>
					<option value="bg-color2">TPL_FRONTEND_OPTION_BGCOLOR_COLOR2</option>
					<option value="bg-color3">TPL_FRONTEND_OPTION_BGCOLOR_COLOR3</option>
					<option value="bg-color4">TPL_FRONTEND_OPTION_BGCOLOR_COLOR4</option>
					<option value="bg-color5">TPL_FRONTEND_OPTION_BGCOLOR_COLOR5</option>
				</field>

				<field
						name="navwidth"
						type="radio"
						class="btn-group"
						default="container"
						label="Menubar Width"
				>
					<option value="container">Container</option>
					<option value="container-fluid">Fluid</option>
				</field>

				<field
						name="menualign"
						type="radio"
						class="btn-group"
						default="right"
						label="Menu Align"
				>
					<option value="left">Left</option>
					<option value="right">Right</option>
				</field>

				<field
						name="stickymenu"
						type="radio"
						class="btn-group"
						default=""
						label="Menubar Sticky"
						description="Sticky menu on top"
				>
					<option value="1">JYES</option>
					<option value="">JNO</option>
				</field>

				<field
						name="stickymenuoffset"
						class=""
						type="text"
						default="0"
						label="Sticky Offset"
						showon="stickymenu:1"
				/>

				<field
						name="menuspacer"
						type="spacer"
						hr="true"
				/>
			</fieldset>
			<fieldset name="advanced">
				<field name="runless" type="radio" class="btn-group" default="1" label="TPL_FRONTEND_RUNLESS" description="TPL_FRONTEND_RUNLESS_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="logoFile" class="" type="media" default=""
					   label="TPL_FRONTEND_LOGO_LABEL"
					   description="TPL_FRONTEND_LOGO_DESC" />
				<field name="containerstyle" type="radio" class="btn-group" default="0" label="TPL_FRONTEND_CONTAINERSTYLE" description="TPL_FRONTEND_CONTAINERSTYLE_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="sitetitle"  type="text" default=""
					   label="JGLOBAL_TITLE"
					   description="JFIELD_ALT_PAGE_TITLE_LABEL"
					   filter="string" />
                <field name="totop" type="radio" class="btn-group" default="1" label="TPL_FRONTEND_TOTOP" description="TPL_FRONTEND_TOTOP_DESC">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
				<field name="analytics" class="" type="text" default="" label="TPL_FRONTEND_ANALYTICS" description="TPL_FRONTEND_ANALYTICS_DESC" />
			</fieldset>
		</fields>
	</config>
</extension>
